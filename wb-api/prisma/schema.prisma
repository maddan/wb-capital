generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deal {
  id         String   @id @default(cuid())
  source     String
  externalId String?
  title      String
  address    String
  city       String
  state      String
  units      Int?
  sqft       Int?
  price      Float
  noi        Float?
  capRate    Float?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  finance    Finance?
}

model Finance {
  id            String @id @default(cuid())
  dealId        String @unique
  deal          Deal   @relation(fields: [dealId], references: [id])
  interestRate  Float
  ltv           Float
  termYears     Int
  annualDebtSvc Float
  dscr          Float
  cashFlowYr1   Float
}

model Investor {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  hash      String
  level     String
  createdAt DateTime @default(now())
}

model Interest {
  id         String   @id @default(cuid())
  dealId     String
  investorId String
  amount     Float
  createdAt  DateTime @default(now())

  @@unique([dealId, investorId])
}
